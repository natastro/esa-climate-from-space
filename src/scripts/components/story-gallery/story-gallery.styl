.storyGallery
  position: relative
  overflow: hidden
  width: 100%

.buttonContainer
  position: absolute
  top: 50%
  z-index: 1
  display: flex
  justify-content: space-between
  width: 100%
  transform: translateY(-15px)
  pointer-events: none

  > *
    pointer-events: all
    fill: #fff

.slider
  display: flex
  width: 100%
  height: 100%

.sliderImage
  width: 100%
  height: 100%
  object-fit: cover
